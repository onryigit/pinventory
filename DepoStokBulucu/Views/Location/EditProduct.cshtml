@model Product

@{
    ViewData["Title"] = "Ürünü Düzenle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark border-secondary shadow">
                <div class="card-header border-secondary">
                    <h3 class="text-white">✏️ Ürünü Düzenle</h3>
                </div>
                <div class="card-body">
                    <form asp-action="EditProduct" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="LocationId" />
                        <input type="hidden" asp-for="CoordinateX" />
                        <input type="hidden" asp-for="CoordinateY" />

                        <div class="mb-4">
                            <label class="form-label text-white-50">Ürün Adı</label>
                            <input asp-for="Name" class="form-control" style="background-color: #2c2c2c; color: white; border-color: #444;" />
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-warning w-100">💾 Güncelle</button>
                            <a asp-action="Details" asp-route-id="@Model.LocationId" class="btn btn-outline-light w-100">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>