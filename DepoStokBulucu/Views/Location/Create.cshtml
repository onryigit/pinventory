@model DepoStokBulucu.Models.Location
<style>
    /* Bu sayfadaki tüm form kutularını koyulaştır */
    .form-control {
        background-color: #2c2c2c !important; /* Koyu Gri Zemin */
        color: white !important; /* Beyaz Yazı */
        border: 1px solid #444 !important; /* İnce Gri Çerçeve */
    }

        /* Kutuya tıklayınca (Focus) rengi bozulmasın */
        .form-control:focus {
            background-color: #333 !important;
            color: white !important;
            border-color: #0d6efd !important; /* Mavi Çerçeve */
            box-shadow: 0 0 5px rgba(13, 110, 253, 0.5);
        }

    /* Dosya seçme kutusu için özel ayar (Bootstrap dosya inputu) */
    input[type="file"] {
        background-color: #2c2c2c !important;
        color: white !important;
    }
</style>
<div class="container mt-4">
    <h2>Yeni Depo Bölgesi Ekle</h2>
    <hr />

    <form asp-action="Create" enctype="multipart/form-data" method="post">

        <div class="mb-3">
            <label class="form-label">Bölge Adı (Örn: Giriş Sağ Raf)</label>
            <input asp-for="Name" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Fotoğraf Seç</label>
            <input type="file" name="file" class="form-control" accept="image/*" required />
        </div>

        <div class="row mt-4">
            <div class="col-md-6 d-flex gap-2">
                <button type="submit" class="btn btn-primary btn-lg px-5">Kaydet</button>
                <a asp-action="Index" class="btn btn-secondary btn-lg px-5">İptal</a>
            </div>
        </div>
    </form>
</div>