@model DepoStokBulucu.Models.Location

<style>
    #image-container {
        position: relative; 
        display: inline-block;
        width: auto;
        max-width: 100%;
        margin: 0 auto;
        line-height: 0; 
    }

    #depo-img {
        display: block; 
        max-width: 100%;
        height: auto;
    }

    .product-pin {
        position: absolute;
        width: 20px;
        height: 20px;
        background-color: red;
        border: 2px solid white;
        border-radius: 50%;
        transform: translate(-50%, -50%); 
        cursor: pointer;
        box-shadow: 0 0 10px rgba(0,0,0,0.5);
        animation: pulse 2s infinite; 
    }

    @@keyframes pulse {
        0% {
            box-shadow: 0 0 0 0 rgba(255, 0, 0, 0.7);
        }

        70% {
            box-shadow: 0 0 0 10px rgba(255, 0, 0, 0);
        }

        100% {
            box-shadow: 0 0 0 0 rgba(255, 0, 0, 0);
        }
    }
</style>

<div class="container mt-3">
    <h3>@Model.Name <small class="text-muted">(Ürün eklemek için resme tıkla)</small></h3>
    <div class="d-flex justify-content-end">
        <a asp-action="Index" class="btn btn-secondary mt-3 mb-3">Geri Dön</a>
    </div>
    <div id="image-container">
        <img src="@Model.ImagePath" id="depo-img" alt="Depo Bölgesi" />

        @foreach (var urun in Model.Products)
        {
            <div class="product-pin"
                 style="top: @urun.CoordinateY.ToString().Replace(",", ".")%; left: @urun.CoordinateX.ToString().Replace(",", ".")%;"
                 title="@urun.Name"
                 onclick="alert('Bu Ürün: @urun.Name')">
            </div>
        }
    </div>
    <div class="mt-5">
        <h3 class="text-white mb-3">📋 Bu Bölgedeki Ürünler</h3>

        @if (Model.Products.Count == 0)
        {
            <div class="alert alert-secondary">
                Henüz bu bölgede işaretlenmiş bir ürün yok. Resmin üzerine tıklayarak ekleyebilirsin.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-dark table-hover table-bordered align-middle">
                    <thead>
                        <tr>
                            <th>Ürün Adı</th>
                            <th style="width: 150px;" class="text-center">İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.Products)
                        {
                            <tr>
                                <td>
                                    <span class="fw-bold">@product.Name</span>
                                </td>
                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-2">

                                        <a asp-action="EditProduct" asp-route-id="@product.Id" class="btn btn-warning btn-sm px-3 text-dark fw-bold">
                                            ✏️ Düzenle
                                        </a>

                                        <form asp-action="DeleteProduct" asp-route-id="@product.Id" method="post"
                                              onsubmit="return confirm('@product.Name ürününü silmek istediğine emin misin?');">
                                            <button type="submit" class="btn btn-danger btn-sm px-3">
                                                🗑️ Sil
                                            </button>
                                        </form>

                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="productModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ürün Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Seçilen Konuma Ürün Ekle:</p>
                <input type="text" id="productName" class="form-control" placeholder="Örn: Vitra S20 Klozet" />
                <input type="hidden" id="clickX" />
                <input type="hidden" id="clickY" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="saveProduct()">Kaydet</button>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>

        $('#depo-img').click(function(e) {
      
        var rect = this.getBoundingClientRect();

        var x = e.clientX - rect.left;
        var y = e.clientY - rect.top;

        var relativeX = ((x / rect.width) * 100).toFixed(2);
        var relativeY = ((y / rect.height) * 100).toFixed(2);

        $('#clickX').val(relativeX.replace(',', '.'));
        $('#clickY').val(relativeY.replace(',', '.'));

        var myModal = new bootstrap.Modal(document.getElementById('productModal'));
        myModal.show();
    });

    function saveProduct() {
        var name = $('#productName').val();
        var x = $('#clickX').val();
        var y = $('#clickY').val();
        var locId = @Model.Id;

        if(name == "") { alert("Ürün adı giriniz!"); return; }

        var data = {
            Name: name,
            CoordinateX: parseFloat(x),
            CoordinateY: parseFloat(y),
            LocationId: locId
        };

        $.ajax({
            type: "POST",
            url: "/Location/AddProduct",
            data: JSON.stringify(data),
            contentType: "application/json; charset=utf-8",
            success: function () {
                location.reload();
            },
            error: function () {
                alert("Hata oluştu!");
            }
        });
    }
</script>