@model IEnumerable<DepoStokBulucu.Models.Location>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-white">📍 Depo Bölgeleri</h2>

        <div class="d-flex gap-2">
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary rounded-pill px-4 shadow-sm">
                 Geri
            </a>

            <a asp-action="Create" class="btn btn-success rounded-pill px-4 shadow-sm">
                ➕ Yeni Bölge Ekle
            </a>
        </div>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@item.ImagePath" class="card-img-top" style="height: 200px; object-fit: cover;" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary w-100">Ürünleri Göster / Ekle</a>
                        <br />
                        <br />
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post"
                              onsubmit="return confirm('Bu bölgeyi ve içindeki tüm işaretli ürünleri silmek istediğinize emin misiniz?');">
                            <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                                🗑️ Bölgeyi Tamamen Sil
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>