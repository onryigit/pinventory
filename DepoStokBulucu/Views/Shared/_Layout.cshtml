<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pinventory</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DepoStokBulucu.styles.css" asp-append-version="true" />

    <style>

        body {
            background-color: #121212;
            color: #ffffff;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .container {
            flex: 1;
            width: 100%;
            padding-bottom: 2rem;
        }

        .navbar {
            background-color: #1e1e1e !important;
            border-bottom: 1px solid #333;
        }

        .navbar-brand, .nav-link {
            color: #ffffff !important;
        }

        footer {
            border-top: 1px solid #333 !important;
            color: #cccccc !important;
            margin-top: auto;
            background-color: #121212; 
            width: 100%;
            padding: 1rem 0;
            flex-shrink: 0;
        }

        .text-muted {
            color: #cccccc !important;
        }

        .btn-admin {
            background-color: #333;
            color: white;
            border: 1px solid #555;
            transition: 0.3s;
        }

            .btn-admin:hover {
                background-color: #555;
                color: white;
            }

        .form-control::placeholder {
            color: #bbbbbb !important;
            opacity: 1;
        }

        .form-control {
            color: white !important;
            background-color: #2c2c2c;
            border-color: #444;
        }
  
        .modal-content {
            background-color: #1e1e1e !important;
            color: white !important;
            border: 1px solid #333;
        }

        .modal-header {
            border-bottom: 1px solid #333;
        }

        .modal-footer {
            border-top: 1px solid #333;
        }

        #productName {
            background-color: #2c2c2c !important;
            color: white !important;
            border: 1px solid #444 !important;
        }

            #productName::placeholder {
                color: #888 !important;
            }
        .btn-close {
            filter: invert(1) grayscale(100%) brightness(200%);
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    PINVENTORY
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="btn btn-sm btn-admin rounded-pill px-3" asp-controller="Location" asp-action="Index">
                                ⚙️ Depo Yönetimi
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container text-center">
            &copy; 2026 - Made by
            <a href="https://github.com/onryigit" target="_blank" style="text-decoration: none; color: #0d6efd; font-weight: bold;">
                Yiğit Öner
            </a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>