<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pinventory</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DepoStokBulucu.styles.css" asp-append-version="true" />

    <style>
        body {
            background-color: #121212; /* Koyu Arka Plan */
            color: #ffffff; /* Ana metin rengi artık BEYAZ */
        }

        /* Navbar Ayarları */
        .navbar {
            background-color: #1e1e1e !important;
            border-bottom: 1px solid #333;
        }

        .navbar-brand, .nav-link {
            color: #ffffff !important;
        }

        /* Footer Ayarları */
        footer {
            border-top: 1px solid #333 !important;
            /* Footer içindeki genel yazı rengi (Yıl yazısı buraya dahil) */
            color: #cccccc !important;
        }

        /* Bootstrap'in standart 'text-muted' (sönük yazı) sınıfını açıyoruz */
        .text-muted {
            color: #cccccc !important; /* Koyu gri yerine açık gümüş rengi */
        }

        /* Kartlar (Eğer kullanılırsa) */
        .card {
            background-color: #1e1e1e;
            border: 1px solid #333;
            color: white;
        }

        /* Admin Butonu Stili */
        .btn-admin {
            background-color: #333;
            color: white;
            border: 1px solid #555;
            transition: 0.3s;
        }

            .btn-admin:hover {
                background-color: #555;
                color: white;
            }

        /* Form Placeholder (Kutu içi ipucu yazısı) Rengi */
        /* Bu kod kutunun içindeki "Ürün adı yazın..." yazısını beyazlatır */
        .form-control::placeholder {
            color: #bbbbbb !important;
            opacity: 1; /* Firefox için netlik ayarı */
        }

        /* Input kutusu genel yazı rengi */
        .form-control {
            color: white !important;
            background-color: #2c2c2c;
            border-color: #444;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    PINVENTORY
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="btn btn-sm btn-admin rounded-pill px-3" asp-controller="Location" asp-action="Index">
                                ⚙️ Depo Yönetimi
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted mt-5 py-3">
        <div class="container text-center">
            &copy; 2026 -
            <a href="https://github.com/onryigit" target="_blank" style="text-decoration: none; color: #0d6efd; font-weight: bold;">
                Designed by Yiğit Öner
            </a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>