@{
    ViewData["Title"] = "Ana Sayfa";
}

<style>
    /* Arama Kutusu Özelleştirme */
    .search-container {
        min-height: 70vh; /* Ekranın %70'ini kapla (ortalamak için) */
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .logo-img {
        width: 700px;
        height: auto;
        max-width: 100%; /* Mobilde küçük ekrandan taşmasın */
    }

    @@media (max-width: 768px) {
        .logo-img {
            width: 90%; /* Mobilde ekranın %90'ı kadar */
        }
    }
    .custom-input {
        background-color: #2c2c2c;
        border: 1px solid #444;
        color: white;
        padding: 15px 25px;
        font-size: 1.2rem;
        border-radius: 50px 0 0 50px !important; /* Sol tarafı yuvarlak */
    }

        .custom-input:focus {
            background-color: #333;
            color: white;
            border-color: #0d6efd;
            box-shadow: 0 0 15px rgba(13, 110, 253, 0.3);
        }

    .custom-btn {
        border-radius: 0 50px 50px 0 !important; /* Sağ tarafı yuvarlak */
        padding-left: 25px;
        padding-right: 25px;
        font-weight: bold;
        letter-spacing: 1px;
    }

    .voice-btn {
        border-radius: 50px !important;
        width: 50px;
        height: 50px;
        padding: 0 !important;
        margin-left: 10px;
        font-size: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
    }

    .voice-btn:hover {
        transform: scale(1.1);
    }

    .voice-btn.listening {
        background-color: #dc3545 !important;
        animation: pulse 1s infinite;
    }

    @@keyframes pulse {
        0%, 100% { box-shadow: 0 0 0 0 rgba(220, 53, 69, 0.7); }
        50% { box-shadow: 0 0 0 10px rgba(220, 53, 69, 0); }
    }

    /* jQuery UI Autocomplete Dark Mode Ayarı */
    .ui-menu {
        background-color: #2c2c2c !important;
        border: 1px solid #444 !important;
        color: white !important;
        border-radius: 10px;
    }

    .ui-menu-item-wrapper:hover {
        background-color: #0d6efd !important;
        color: white !important;
        border: none !important;
    }
</style>

<div class="search-container">
    <img src="~/logo2.png"
         alt="Pinventory Logo"
         class="mb-3 mt-4 d-block mx-auto logo-img"
         style="filter: drop-shadow(0 0 5px rgba(255, 255, 255, 0.3));" />
    <p class="text-white-50 mb-2 fs-5" style="margin-top: -10px;">Depodaki herhangi bir ürünü saniyeler içinde bulun.</p>

    <div class="row justify-content-center w-100">
        <div class="col-md-8 col-lg-6 col-10">
            <form asp-action="Search" method="get" id="searchForm">
                <div class="input-group input-group-lg">
                    <input type="text" id="searchInput" name="query" class="form-control custom-input"
                           placeholder="Ürün adı yazın (Örn: Vitra S20)..." required autocomplete="off">
                    <button class="btn btn-primary custom-btn me-2" type="submit">ARA</button>
                    <button type="button" class="btn btn-info voice-btn" id="voiceBtn" title="Sesli Arama">
                        🎤
                    </button>
                </div>
            </form>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-danger mt-4 bg-dark border-danger text-danger">
                    @ViewBag.Message
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>

    <script>
        // Web Speech API Yapılandırması
        const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
        const recognition = new SpeechRecognition();
        let isListening = false;

        recognition.lang = 'tr-TR'; // Türkçe
        recognition.continuous = false;
        recognition.interimResults = false;

        const voiceBtn = document.getElementById('voiceBtn');
        const searchInput = document.getElementById('searchInput');

        // Sesli Arama Başlat
        voiceBtn.addEventListener('click', function(e) {
            e.preventDefault();
            
            if (!isListening) {
                recognition.start();
                isListening = true;
                voiceBtn.classList.add('listening');
                voiceBtn.textContent = '🎤 Dinleniyor...';
            }
        });

        // Konuşma Sonlandırıldığında
        recognition.addEventListener('end', function() {
            isListening = false;
            voiceBtn.classList.remove('listening');
            voiceBtn.textContent = '🎤';
        });

        // Sonuç Alındığında
        recognition.addEventListener('result', function(event) {
            const transcript = event.results[0][0].transcript.toLowerCase();
            
            // Konuşulan metni input'a yaz
            searchInput.value = transcript;
            
            // Hemen ara
            document.getElementById('searchForm').submit();
        });

        // Hata Yönetimi
        recognition.addEventListener('error', function(event) {
            alert('Ses tanıma hatası: ' + event.error);
            voiceBtn.classList.remove('listening');
            voiceBtn.textContent = '🎤';
            isListening = false;
        });

        // Autocomplete
        $(document).ready(function() {
            $("#searchInput").autocomplete({
                source: '@Url.Action("GetProductNames", "Home")',
                minLength: 2,
                select: function(event, ui) {
                    $("#searchInput").val(ui.item.value);
                    $("#searchForm").submit();
                }
            });
        });
    </script>
}
